<footer class="footer-primary" id="footer">
  <div class="container">

    <div class="footerContent">
      <div class="row">

        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 footerContent--menu">
          <h3 class="footerContent--header">Connect</h3>
          <hr>
          <div class="row footer-social">
            <div class="col-xs-1">
              <a href="https://twitter.com/ScottEblin" target="_blank" class="footer-link">
                <i class="fa fa-twitter"></i>
              </a>
            </div>
            <div class="col-xs-1">
              <a href="https://facebook.com/EblinGroup" target="_blank" class="footer-link">
                <i class="fa fa-facebook"></i>
              </a>
            </div>
            <div class="col-xs-1">
              <a href="https://www.youtube.com/ScottEblin" target="_blank" class="footer-link">
                <i class="fa fa-youtube-play"></i>
              </a>
            </div>
            <div class="col-xs-1">
              <a href="https://vimeo.com/EblinGroup" target="_blank" class="footer-link">
                <i class="fa fa-vimeo"></i>
              </a>
            </div>
            <div class="col-xs-1">
              <a href="http://linkedin.com/company/TheEblinGroup" target="_blank" class="footer-link">
                <i class="fa fa-linkedin"></i>
              </a>
            </div>
            <div class="col-xs-1">
              <a href="mailto:contact@eblingroup.com" target="_blank" class="footer-link">
                <i class="fa fa-envelope"></i>
              </a>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 footerContent--menu">
          <h3 class="footerContent--header">Resources</h3>
          <hr>
          <ul class="list-plain">
            {% for item in footer.items %}
              <li id="menu-item-{{item.ID}}" class="footerContent--topLink menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
                <a href="{{item.link}}">{{item.title}}</a>

                {# Just in case you want to enable dropdown/submenus #}
                {% if item.get_children %}
                  <ul class="footerContent--submenu">
                    {% for child in item.get_children %}
                      <li class="footerContent--link nav-drop-item menu-{{ child.title|replace(' ', '-')|lower }}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}

              </li>
            {% endfor %}
          </ul>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-3 footerContent--menu">
          <h3 class="footerContent--header">Support</h3>
          <hr>
          <ul class="list-plain">
            {% for item in support.items %}
              <li id="menu-item-{{item.ID}}" class="footerContent--topLink menu-item-type-{{item.type}} menu-item-object-{{item.object}} menu-item-{{item.ID}}">
                <a href="{{item.link}}" target="_blank">{{item.title}}</a>

                {# Just in case you want to enable dropdown/submenus #}
                {% if item.get_children %}
                  <ul class="footerContent--submenu">
                    {% for child in item.get_children %}
                      <li class="footerContent--link nav-drop-item menu-{{ child.title|replace(' ', '-')|lower }}"><a href="{{child.get_link}}">{{child.title}}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}

              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="row">
         <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 footerContent--copyright">
            <a href="https://eblingroup.com">Â© {{"now"|date("Y")}} EBLIN GROUP</a>
         <div>
      </div>
    </div>

  </div>
</footer>

<div class="mobileNav--cloak"></div>